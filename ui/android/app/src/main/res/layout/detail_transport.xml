<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_transport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="false"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <FrameLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        >

        <View
            android:id="@+id/detail_transport_vertline"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detail_transport_dep_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:freezesText="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/abc_primary_text_material_light"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/detail_transpot_dep_delay"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:freezesText="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLines="1"
                        android:textColor="#FF5722"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/detail_transport_dep_station"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:freezesText="true"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingStart="9dp"
                        android:textColor="@color/abc_primary_text_material_light"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_transport_direction_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/abc_text_size_medium_material"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward_black_24dp"
                        android:tint="@color/grey_200"/>

                    <TextView
                        android:id="@+id/detail_transport_direction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:freezesText="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/secondary_text_default_material_light"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>