<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_stopover"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <FrameLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp">

        <View
            android:id="@+id/detail_stopover_bullet"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_primary" />

        <View
            android:id="@+id/detail_stopover_vertline"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorPrimary" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_stopover_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:textColor="@color/abc_primary_text_material_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_stopover_delay"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:freezesText="true"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/detail_stopover_stop_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="9dp"
                android:textColor="@color/abc_primary_text_material_light"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>